[flake8]
max-line-length = 100
exclude = 
    .git,
    __pycache__,
    venv,
    .venv,
    env,
    ENV,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    migrations

# Игнорируемые ошибки
ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    F401,  # imported but unused (иногда нужно для __init__.py)

per-file-ignores =
    __init__.py:F401
    conftest.py:F401